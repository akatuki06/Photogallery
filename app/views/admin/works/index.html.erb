        <div class="col-lg-8 m-3">
          <nav class="navbar navbar-expand-md navbar-dark bg-primary">
            <div class="container">
              <a class="navbar-brand" href="#">
                <b>Works</b>
              </a>
              <div class="collapse navbar-collapse text-center justify-content-end" id="navbarPrimarySupportedContent"> </div>
            </div>
          </nav>
          <h2 class="my-3">検索フォーム</h2>
          <hr>
          <form class="">
            <div class="form-group">
              <label>作品ID</label>
              <input type="email" class="form-control" placeholder="Enter email">
              <div class="form-group">
                <label>作品名</label>
                <input type="password" class="form-control" placeholder="Password"> </div>
              <div class="form-group">
                <label>アーティスト名</label>
                <input type="password" class="form-control" placeholder="Password"> </div>
              <button type="submit" class="btn btn-primary">検索</button>
              <hr> </div>
            </form>
          </div>

          <div class="container">
            <div class="row">
              <div class="col-lg-12 justify-content-center">
                <h2 class="my-3">検索結果</h2>
                <hr>
                <table class="table">
                  <thead>
                    <tr>
                      <th>作品画像</th>
                      <th>登録日時</th>
                      <th>作品ID</th>
                      <th>作品名</th>
                      <th>アーティスト名</th>
                      <th>販売価格</th>
                      <th>在庫数</th>
                      <th>ステータス</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @works.each do |w| %>
                    <tr>
                      <td><%= attachment_image_tag w, :image, format: 'jpg', class: "center-block", fallback: "assets/no_image_m.png", width: '40', height: '40'%></td>
                      <td><%= w.created_at.strftime('%Y年%m月%d日 %H:%M') %></td>
                      <td><%= w.id %></td>
                      <td><%= w.title %></td>
                      <td><%= w.artist.name %></td>
                      <td>¥<%= w.price.to_s(:delimited) %>円</td>
                      <td>
                        <% if w.stock == 0 %>
                        <a class="badge badge-danger text-white">売り切れ</a>
                        <% else %>
                        <%= w.stock %>点
                        <% end %>
                      </td>
                      <td>
                        <% if w.is_deleted? %>
                        <a class="badge badge-danger text-white">削除済み</a>
                        <% else %>
                        <a class="badge badge-secondary text-white">販売中</a>
                        <% end %>

                      <td>
                    <%= link_to admin_work_path(w.id) do  %>
                        <button type="submit" class="btn btn-primary btn-sm mx-2">詳細</button>
                      </td>
                    <% end %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>