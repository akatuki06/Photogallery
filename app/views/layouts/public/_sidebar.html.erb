<div class="col-lg-4 text-center">
  <%= attachment_image_tag current_user, :image, format: 'jpg',
  class: "center-block", fallback: "/assets/no_image_m.png", width: '250', height: '250'%>
  <div class="form-group my-3">
  </div>
  <div class="col-md-12 my-5">
    <div class="card">
      <div class="card-header bg-info">
        <h5 class="mb-0 text-center text-white">詳細情報</h5>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item btn">クリップ一覧</li>
        <li class="list-group-item btn">購入履歴</li>
        <%= link_to "プロフィール編集", edit_user_registration_path, class: "list-group-item btn" %>
        <li class="list-group-item btn">個人情報設定</li>
        <% if current_user.is_artist? %>
          <%= link_to "アーティスト詳細", artist_path(current_user.artist.id), class: "list-group-item btn" %>
          <li class="list-group-item btn">展覧会登録・編集</li>
          <li class="list-group-item btn">売り上げ関連</li>
        <% else %>
          <%= link_to "アーティスト登録", new_artists_path, class: "list-group-item btn" %>
        <% end %>
        
      </ul>
    </div>
  </div>
</div>