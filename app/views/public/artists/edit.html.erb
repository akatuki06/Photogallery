<% if @artist.errors.any? %>
<div id="error_explanation" class="alert alert-danger">
  <ul>
    <% @artist.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="py-5">
  <div class="container">
    <div class="row">
      <%= render 'layouts/public/sidebar' %>
      <div class="flex-colum d-flex col-lg-8">
        <div class="col-lg-12 mx-4">
         <h1 class="mb-4">アーティスト情報編集</h1>
         <%= form_for @artist, :url => artists_path do |f| %>

         <div>アーティスト名<span class="badge badge-danger">必須</span></div>
         <%= f.text_field :name,size: "50x10" %>
         <div>ホームページURL</div>
         <%= f.text_field :url,size: "50x10" %>
          <div>所属</div>
          <%= f.text_field :group, size: "50x10" %>
          <div>経歴</div>
          <%= f.text_area :career, size: "50x5" %>
          <div>メッセージ</div>
          <%= f.text_area :message, size: "50x5" %>
          
         <div>
          <%= f.submit "変更", class: "btn btn-primary col-xs-12" %>
        </div>
        <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
</div>