
  <div class="py-5 text-center bg-secondary">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-12">
              <h1 class="text-light"><%= @exhibition.title %></h1>
              <p class="text-light text-left"><%= @exhibition.summary %></p>
              <div id="like-button">
              <%= render partial: "like", locals:{exhibition: @exhibition} %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="py-5 text-center">
    <div class="container text-white">
      <div class="row">
        <div class="col-md-12">
         <%= @exhibition.images.each do |i| %>
         <div class="">
           <div>
            <%= attachment_image_tag i, :image, format: 'jpg',
            class: "my-3 center-block img-fluid" %>
           </div>
         </div>
         <% end %>
       </div>
      </div>
    </div>
  </div>
  <div class="py-5 text-white bg-dark" >
    <div class="container">
      <div class="row">
        <div class="col-md-8 offset-2 p-3">
          <table class="table table-hover table-striped table-bordered">
            <tbody>
              <tr class="bg-info">
                <th scope="row" class="w-25">会場</th>
                <td class="bg-white"><%= @exhibition.place %></td>
              </tr>
              <tr class="bg-info">
                <th scope="row">会期</th>
                <td class="bg-white"><%= @exhibition.term %></td>
              </tr>
              <tr class="bg-info">
                <th scope="row">入場料
                  <br> </th>
                <td class="bg-white"><%= @exhibition.entrance_fee %></td>
              </tr>
              <tr class="bg-info">
                <th scope="row">休館日</th>
                <td class="bg-white"><%= @exhibition.closed_day %></td>
              </tr>
              <tr class="bg-info">
                <th scope="row">開館時間</th>
                <td class="bg-white"><%= @exhibition.opneing_hour %></td>
              </tr>
              <tr class="bg-info">
                <th scope="row">問い合わせ先</th>
                <td class="bg-white"><%= @exhibition.information %></td>
              </tr>
              <tr class="bg-info">
                <th scope="row">公式サイト</th>
                <td class="bg-white"><%= @exhibition.url %></td>
              </tr>
              <tr class="bg-info">
                <th scope="row">参加アーティスト</th>
                <td class="bg-white"><%= link_to "#{@exhibition.artist.name}", artist_path(@exhibition.artist.id),class: "btn btn-secondary" %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
