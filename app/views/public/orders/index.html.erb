<h1>注文一覧</h1>

<table>
  <thead>
    <tr>
      <th>注文ID</th>
      <th>注文内容</th>
      <th>氏名</th>
      <th>住所</th>
      <th>メールアドレス</th>
      <th>電話番号</th>
      <th>支払い方法</th>
      <th>合計</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
	<td><%= order.id %></td>

	<td>
	<% order.line_items.each do |item| %>
		[商品ID:<%= item.work.id %>]
		[商品名：<%= item.work.title %>]
    [単価：<%= item.price %>]
		[数量：<%= item.quantity %>]
		[金額：<%= (item.total_price).to_i %>円]
		<br>
	<% end %>
	</td>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td><%= order.phone %></td>
        <td><%= order.payment %></td>
        <td><%= order.total %></td>
        <td><%= link_to '詳細', order_path(order), :class => 'btn' %></td>
        <td><%= link_to '削除', order, method: :delete, data: { confirm: '本当に削除してもよろしいですか？' }, :class => 'btn' %></td>
      </tr>

    <% end %>
  </tbody>
</table>