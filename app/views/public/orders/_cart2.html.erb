

<div class="col-md-12">
  
  <div class="py-3">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <table class="table">
            <tbody>
              <tr>
                <td>画像</td>
                <td>タイトル</td>
                <td>単価</td>
                <td>数量</td>
                <td>小計</td>
                <td></td>
              </tr>
            </tbody>

            <tbody>
              <% @cart.line_items.each do |item| %>
              <tr>
                <td><%= attachment_image_tag item.work, :image, format: 'jpg',
                class: "center-block", fallback: "/assets/no_image_m.png", width: '100', height: '100'%></td>
                <td><%= item.work.title %></td>
                <td><%= (item.work.price).to_s(:delimited) %>円</td>
                <td><%= item.quantity %>点
                </td>
                <td><%= (item.total_price).to_s(:delimited) %>円</td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>