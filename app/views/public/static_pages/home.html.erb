<!DOCTYPE html>
<html>
<head>
	<title>Photogallery</title>
	<%= csrf_meta_tags %>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" type="text/css">
	<link rel="stylesheet" href="theme.css" type="text/css">
</head>
<header>
	<nav class="navbar navbar-expand-md navbar-dark flex-column h-500" style="background-image: url('/assets/I_020.JPG');background-position: center;background-size:cover;">
		<div class="container">
			<div class="row my-3 flex-column">
				<a class="h1  text-dark w-25">Photogallery</a>
		<form class="form-inline" >
			<% if user_signed_in? %>
			<a>こんにちは<%= current_user.name %>さん</a>
			<% else %>
			<a>こんにちはゲストさん</a>
			<% end %>
		</form>
			</div>
			<div>
			</div>
			<div class="row">
				<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"> <span class="navbar-toggler-icon"></span> </button>
				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item">
							<%= link_to "アーティスト一覧", artists_path, class: "nav-link" %>
						</li>
						<li class="nav-item">
              				<%= link_to "作品一覧", works_path, class: "nav-link" %>
						</li>
						<li class="nav-item">
              				<%= link_to "写真展一覧", exhibitions_path, class: "nav-link" %>
						</li>
						<% if user_signed_in? %>
						<li class="nav-item">
							<%= link_to "マイページ", users_show_path, class: "nav-link" %>
						</li>
						<li class="nav-item">
							<%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
						</li>
						<% else %>
						<li class="nav-item">
							<%= link_to "ログイン/新規登録", static_pages_entrance_path, class: "nav-link" %>
							<% end %>
						</li>
							<% if session[:cart_id].present? %>
							<li class="nav-item">
								<%= link_to "カート", cart_path(session[:cart_id]), class: "nav-link fa fa-shopping-cart bg-light text-dark" %>
							</li>
							<% end %>
					</ul>
				</div>
			</div>
		</div>
	</nav>
</header>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<body>
 <%= render 'public/works/works' %>
 <%= render 'public/artists/artists' %>
 <%= render 'public/exhibitions/exhibitions' %>
 <%= render 'layouts/public/footer' %>
 <%= render template: "layouts/application" %>
	<!-- 追記 -->
	

	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

</body>
</html>
