

<div class="py-3 text-white h-100" >
    <div class="container">
      <div class="row text-dark justify-content-center">
        <div class="col-md-6 my-5">
          <h1>お問い合わせ(確認画面)</h1>
          <%= form_for @contact, :url => contacts_path do |f| %>
          <form>
            <div class="form-group">
              <label for="InputName" contenteditable="true">お名前：</label>
              <%= f.hidden_field :name %>
              <%= @contact.name %>
            </div>
            <div class="form-group">
              <label for="InputEmail1">メールアドレス：</label>
              <%= f.hidden_field :email %>
              <%= @contact.email %>
              </div>
            <div class="form-group">
              <label for="Textarea">お問い合わせ内容</label>
              <%= f.hidden_field :message %>
              <%= simple_format(@contact.message) %>
            </div>
            <%= f.submit "送信", class: "btn btn-info" %>
          </form>
          <% end %>

        </div>
      </div>
    </div>
  </div>